@typeparam TItem
@code
{
    private string[] columnNames = Array.Empty<string>();

    protected override void OnInitialized()
    {
        columnNames = GridHelpers
            .GetGridColumns<TItem>()
            .Select(x => x.Name)
            .ToArray();
    }
}
<tr>
    @foreach (var name in columnNames)
    {
        <th>@name</th>
    }
</tr>