@inherits TestContext
@* GridRowTest.razor *@
@code 
{
    [Fact]
    public void GridRow_Renders_No_Columns_When_TItem_Has_No_Public_Properties()
    {
        var cut = Render(@<GridRow TItem="object" />);
        
        cut.MarkupMatches("<tr />");
    }
 
    [Theory, AutoData]
    public void GridRow_Renders_Columns_Based_On_Public_Instance_Properties_Of_TItem(
        WeatherForecast item)
    {
        var cut = Render(@<GridRow Item="item" />);

        cut.MarkupMatches(
            @<tr>
                <td>@item.Date</td>
                <td>@item.TemperatureC</td>
                <td>@item.TemperatureF</td>
                <td>@item.Summary</td>
            </tr>);
    }
}